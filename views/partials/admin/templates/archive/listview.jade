div#menu_wrapper(ng-init=menu_template_src = '/admin/templates/include/menu' ng-include src=menu_template_src)
    div#container
        div#form_container
            table.listview
                thead
                    th {{myObj['Created']}}
                    th {{myObj['Edit']}}
                    th {{myObj['Delete']}}
                tbody
                    tr(ng-repeat='item in categories')
                        td {{$index+1}}
                        td {{item.title}}
                        td.center {{item.date}}
                        td.center: a(href={{item.edit_url}})  Edit
                        td.center: a(href='#' data-deleteurl={{item.delete_url}} ng-click=confirmDelete($event)) Delete
                    tr
                        td(colspan=8 nodata{{myObj['No records to display']}})