div#menu_wrapper(ng-init=menu_template_src = '/admin/templates/include/menu' ng-include src=menu_template_src)
    div#container
        div#form_container
            table.listview
                thead
                    th {{myObj['ID']}}
                    th {{myObj['Title']}}
                    th {{myObj['Parent category']}}
                    th {{myObj['Created']}}
                    th {{myObj['Edit']}}
                    th {{myObj['Delete']}}
                tbody
                    tr(ng-repeat='item in categories')
                        td.center {{item._id}}
                        td {{item.title}}
                        td.center {{item.parent.title}}
                        td.center {{item.date}}
                        td.center: a(href={{item.edit_url}})  Edit
                        td.center: a(href='#' data-deleteurl={{item.delete_url}} ng-click=confirmDelete($event)) Delete
                    tr
                        td(colspan=8 nodata{{myObj['No records to display']}})
                    tr
                    tr(ng-hide=printMode)
                        td(colspan=5): a.btn.btn-primary(href ng:click="addItem()") Add Category
        </tr>