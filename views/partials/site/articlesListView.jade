div.row
    div.container
        h2 Articles
        p Number of articles: {{articles.length}}
        p Number of categories: {{categories.length}}
        div.col-md-8

            article(ng-repeat="article in articles")
                a(href="/articles/{{article._id}}") {{article.title}}
                p Category: {{ article.category }}
                p {{ article.date }}
                p {{ article.author }}
                p {{ article.smallbody }}

            //user(ng-repeat="user in users")
