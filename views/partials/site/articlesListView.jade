h3 Articles

div Number of articles: {{articles.length}}  
div Number of categories: {{categories.length}}

div.row
  div.col-md-8
      button.btn.btn-success(ng-click="newArticle()") New Article
      div#form_container
          table.listview
              thead
                  th Id
                  th Title
                  th Category
                  th Date
                  th Author
                  th Smallbody

              tr(ng-repeat="item in articles")
                  td.center {{ article.id }}
                  td {{ article.title }}
                  td {{ article.category }}
                  td {{ article.date }}
                  td {{ article.author }}
                  td {{ article.smallbody }}
              tr
                  td 'No records to display'



      div.col-md-4 
      h2 Category

      div(ng-repeat="article in articles")
          p
            a(href="/articles/category/{{article.categoryId}}") {{article.category}}

      h2 Archive

      div(ng-repeat="article in articles")
          p
            a(href="/articles/category/{{article.categoryId}}") {{article.category}}
