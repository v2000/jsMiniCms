h3 Articles

div Number of articles: {{articles.length}}  
div Number of categories: {{categories.length}}

div.row
  div.col-md-9
      div(ng-repeat="article in articles")
        p
          a(href="/articles/{{article._id}}") {{article.title}}
          b {{article.date}}
          b {{article.author}}
        p {{article.smallbody}}

      button.btn.btn-success(ng-click="newArticle()") New Article
      br
      br
    div.col-md-2.col-md-offset-1.blog-sidebar
        p
          b Category:

        div(ng-repeat="article in articles")
          p
            a(href="/articles/category/{{article.categoryId}}") {{article.category}}

        p
          b Arkiv:

        div(ng-repeat="article in articles")
          p
            a(href="/articles/category/{{article.categoryId}}") {{article.category}}
